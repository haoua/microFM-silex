{% extends "layout.html.twig" %}

{% block nav %}
	<header id="main">
		<div class="container">
			<nav>
				<ul>
					<li><a href="/logout"><i class="fa fa-sign-out" aria-hidden="true"></i> Déconnexion</a></li>
				</ul>
			</nav>
		</div>
	</header>
{% endblock %}

{% block user %}
	<!-- 
<div id="user">
